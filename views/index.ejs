<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/drug.js"></script>

    <script src="https://kit.fontawesome.com/a8359d9931.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
    <title>Document</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="container">
        <div class="content">
            <h6>ADD DRUGS TO CHECK FOR INTERACTION</h6>


            <form action="/search" method="POST" id="drug-form">

                <label for="drugs" class="sr-only">Enter a drug name:</label>
                <input type="text" id="drugs" name="drugs" placeholder="Enter a drug name">

                <button type="submit" id="submit-button" style="display: none;">Search</button>
            </form>
        </div>

        <!-- <button type="submit" id="check-interactions" disabled>Check
            Interactions</button>
        <button type="submit" id="clear-all-button" class="btn btn-sm btn-outline-primary">CLEAR</button> -->

        <% if (typeof drugs !=='undefined' ) { %>

            <!-- error message will be displayed here -->
            <div id="error-message">
                <% if (typeof error !=="undefined" ) { %>
                    <p>
                        <%= error %>
                    </p>
                    <% } %>
            </div>
            <div id="no-interaction"></div>

            <div id="drug-list">

                <% let uniqueDrugs=[...new Set(drugs)]; let displayDrugs=uniqueDrugs.slice(0, 5);%>
                    <% displayDrugs.forEach(function(drug, index) { %>
                        <p>
                            <%= drug %> <i class="fa-regular fa-xmark" data-drug="<%= drug %>"></i><i
                                    class="fa-solid fa-circle-minus"></i>
                        </p>
                        <% }); %>

            </div>

            <button type="submit" id="check-interactions" disabled>Check
                Interactions</button>
            <button type="submit" id="clear-all-button" class="btn btn-sm btn-outline-primary">CLEAR</button>
            <!-- search results will be displayed here -->
            <div id="drug-results"></div>

            <% if (drugs.length< 2) { %>

                <script>// Display an error message
                    const checkInteractionsButton = document.querySelector('#check-interactions');
                    checkInteractionsButton.disabled = true;
                    document.getElementById('error-message').innerHTML = 'Please enter at least two drugs.';
                    document.getElementById('drug-results').innerHTML = ''</script>
                <% } %>


                    <% if (drugs.length>= 2) { %>

                        <script>const checkInteractionsButton = document.querySelector('#check-interactions');
                            checkInteractionsButton.disabled = false;</script>
                        <% } %>

                            <script>init()</script>


                            <% } %>
    </div>


</body>

</html>